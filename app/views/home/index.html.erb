<% if user_signed_in? %>
<%= render 'form' %>
<% if current_user.role == "admin" %>
	<% controller.redirect_to '/admin_panel' %>
<% end %>

<% else %>

<h2>Welcome</h2>
<%= button_to "Sign In", new_user_session_path, :method => :get %>
<%= button_to "Sign Up", new_user_registration_path, :method => :get %>

<% end %>