<%= javascript_include_tag :all %>
<%= javascript_include_tag "application" %>
<div id="header-font"><h2 class="header-font">show</h2></div>
<div class="my_field">
<p>
	<strong>Title:</strong>
	<%= @blog.name %>
</p>
<p>
	<strong>Author:</strong>
	<%= find_username(@blog) %>
</p>
<p>
	<strong>Description:</strong>
	<%= @blog.description %>
</p>
<% if can? :edit, @blog %>
<%= link_to "Create New Post", new_blog_post_path(@blog) %>
<% end %>
<h4>Posts:</h4>
<% @posts.each do |post| %>
<p>
	<%= link_to post.name, post_path(post) %><br>
	<%= post.description %><br>
</p>
<% end %>
<%= will_paginate @posts, class: "pager" %>
</p>
<p>
	<% if can? :update && :edit && :destroy, @blog%>
	<%= link_to 'Edit', edit_blog_path(@blog) %>
	
	<%= button_to 'Delete', blog_path(@blog), method: :delete, data: { confirm: 'Are you sure?' } %>
	<% end %>
</p>
<p><%= link_to 'To all blogs of this author', user_blogs_path(@user) %></p>
</div>