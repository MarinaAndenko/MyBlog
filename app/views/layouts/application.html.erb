<!DOCTYPE html>
<html>
<head>
  <title>SlobodaApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'style' %> 
</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top navbar-default-bg">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="small-menu navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to '', home_path, class: "glyphicon glyphicon-send navbar-brand"  %>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <%= render "shared/navbar" %>
  </div><!-- /.container-fluid -->
</nav>

<%= yield %>
</body>
</html>
